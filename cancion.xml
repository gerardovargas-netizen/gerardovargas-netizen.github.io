  <body>

    <div rend="título">Canción.</div>

    <lg>

    <l n="1">
        <seg>
            <hi rend="capitular">C</hi>ON naval pompa
        </seg>
        <caesura/>
        <seg>
            de inquieto lino
        </seg>
    </l>

     <l n="2">
        <seg>
            (Velero <choice><abbr>boſq̄</abbr><expan>bosque</expan></choice>
        </seg>
        <caesura/>
        <seg>
            <choice><abbr>aū</abbr><expan>aun</expan></choice> <choice><abbr>cōtra</abbr><expan>contra</expan></choice> el <chpice><abbr>viēto</abbr><expan>viento</expan></chpice> armado)
        </seg>
    </l>

     <l n="3">
        <seg>
            La proa diligente
        </seg>
        <caesura/>
        <seg>
            en poca arena
        </seg>
    </l>

     <l n="4">
        <seg>
            No <choice><orig>ſolo</orig><reg>solo</reg></choice> <choice><orig>dirigiò</orig><reg>dirigió</reg></choice>
        </seg>
        <caesura/>
        <seg>
            <choice><orig>deſcaminado</orig><reg>descaminado</reg></choice>
        </seg>
    </l>

     <l n="5">
        <seg>
            El <persName><choice><orig>Principe</orig><reg>Príncipe</reg></choice> Troyano</persName>
        </seg>
        <caesura/>
        <seg>
            peregrino;
        </seg>
    </l>

     <l n="6">
        <seg>
            Mas <choice><orig>redujola</orig><reg>redújola</reg></choice>
        </seg>
        <caesura/>
        <seg>
            entre <choice><orig>vna</orig><reg>una</reg></choice><sic>.</sic> y otra almena
        </seg>
    </l>

     <l n="7">
        <seg>
            <chpice><orig>Tocò</orig><reg>Tocó</reg></chpice> las playas, mas
        </seg>
        <caesura/>
        <seg>
            fue de <choice><orig>ſu</orig><reg>su</reg></choice> pena
        </seg>
    </l>

     <l n="8">
        <seg>
            Termino <choice><orig>luminoſo</orig><reg>luminoso</reg></choice>:
        </seg>
    </l>

     <l n="9">
        <seg>
            Que fuego el <choice><orig>eſpirando</orig><reg>esperando</reg></choice>
        </seg>
        <caesura/>
        <seg>
            <choice><orig>afectuoſo</orig><reg>afectuoso</reg></choice>,
        </seg>
    </l>

     <l n="10">
        <seg>
            <placeName><hi rend="itálicas">Delos</hi></placeName>, campos apenas
        </seg>
        <caesura/>
        <seg>
            ha ofrecido
        </seg>
    </l>

     <l n="11">
        <seg>
            Do <choice><orig>hallò</orig><reg>halló</reg></choice> reparo
        </seg>
        <caesura/>
        <seg>
            agradecidamente;
        </seg>
    </l>

     <l n="12">
        <seg>
            <choice><orig>Quando</orig><reg>Cuando</reg></choice> de amor
        </seg>
        <caesura/>
        <seg>
            admira reverente
        </seg>
    </l>

     <l n="13">
        <seg>
            <choice><orig>Deydad</orig><reg>Deidad</reg></choice>, que en <placeName><choice><orig>Iſla</orig><reg>Isla</reg></choice></placeName>
        </seg>
        <caesura/>
        <seg>
            <choice><orig>ſe</orig><reg>se</reg></choice> venera culta
        </seg>
    </l>

     <l n="14">
        <seg>
            <choice><orig>Triumphando</orig><reg>Triunfando</reg></choice>
        </seg>
        <caesura/>
        <seg>
            <choice><orig>de el</orig><reg>del</reg></choice> agua, que la oculta
        </seg>
    </l>

     <l n="15">
        <seg>
            Aun contra el
        </seg>
        <caesura/>
        <seg>
            <rs type="constelación"><choice><orig>Orion</orig><reg>Orión</reg></choice></rs> humedecido;
        </seg>
    </l>

     <l n="16">
        <seg>
            Que <choice><orig>ſer</orig><reg>ser</reg></choice> <choice><orig>quiſo</orig><reg>quiso</reg></choice> en
        </seg>
        <caesura/>
        <seg>
            el mar <choice><orig>ſin</orig><reg>sin</reg></choice> <choice><orig>cobardia</orig><reg>cobardía</reg></choice>
        </seg>
    </l>

     <l n="17">
        <seg>
            Al <rs type="etónimo"><choice><orig>Phrygio</orig><reg>frigio</reg></choice></rs><sic>,</sic> muro
        </seg>
        <caesura/>
        <seg>
            y <choice><orig>reſiſstencia</orig><reg>resistencia</reg></choice> al <choice><orig>dia</orig><reg>día</reg></choice>.
        </seg>
    </l>

